{
    "rules": {
        "indent": [
            2,
            2,
            {"SwitchCase": 1}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "yoda": [2, "always", { "onlyEquality": true }],
        "curly": [
            2,
            "multi-or-nest",
            "consistent"
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "spread" : true,
            "restParams" : true,
            "impliedStrict": true,
            "experimentalObjectRestSpread": true
        }
    }
}
